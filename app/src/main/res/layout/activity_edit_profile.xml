<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal"
        android:background="@drawable/borderoneside">

        <LinearLayout
            android:id="@+id/userIcon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/circleicon"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akhrorjon"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="axror_96@gmail.com" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID: 182838485" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change your email address"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:background="@drawable/borderoneside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:background="@drawable/borderoneside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal information"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MY SUBSCRIPTION PLAN"
                android:background="@drawable/borderoneside"
                android:textColor="#262626"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subsciption"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free"
                android:paddingBottom="15dp"
                android:textSize="14dp"
                android:background="@drawable/borderoneside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:background="@drawable/borderoneside"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonred"
                android:text="Log Out"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>