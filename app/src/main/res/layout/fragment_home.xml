<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".IndexBottomSheetFragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Top Playlist Start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/back1"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP PLAYLISTS"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:textSize="17sp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTopPlaylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#0074b2"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"

            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/viewAllPlaylist"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:text="View All"
            android:background="@drawable/buttonhape"

            />
        <!--Top Playlist finished-->


        <!--Top Genres started-->
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/back2"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP GENRES"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:textSize="17sp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTopGenres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#0074b2"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"

            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/viewAllGenres"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:text="View All"
            android:background="@drawable/buttonhape"

            />

        <!--Top Genres finished-->


        <!--Release started-->
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/back3"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP ALBUMS"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:paddingLeft="15dp"
                android:textSize="17sp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDiscover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="#0074b2"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"

            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/viewAllAlbums"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:text="View All"
            android:background="@drawable/buttonhape"
            android:layout_marginBottom="45dp"

            />

        <!--Release finished-->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
