<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#4cb6cb">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="MooZee"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="36sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Change Password"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#eaf6f9" />
        <EditText
            android:id="@+id/edit_change_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:height="45dp"
            android:background="@drawable/edittextshape"
            android:hint="Old Password"
            android:textAlignment="center"
            android:textColor="#555"
            android:textColorHint="#cbd5dd"/>
        <EditText
            android:id="@+id/edit_change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:height="45dp"
            android:background="@drawable/edittextshape"
            android:hint="New Password"
            android:textAlignment="center"
            android:textColor="#555"
            android:textColorHint="#cbd5dd"/>
        <EditText
            android:id="@+id/edit_change_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:height="45dp"
            android:background="@drawable/edittextshape"
            android:hint="ConfirmPassword"
            android:textAlignment="center"
            android:textColor="#555"
            android:textColorHint="#cbd5dd"/>
        <RelativeLayout
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#fff" />

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/arrowrightXML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon"/>                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
