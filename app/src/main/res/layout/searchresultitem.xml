<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/searchResultCategoryXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albums"
            android:textSize="22sp"
            android:textColor="#000"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/searchResultCategoryXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:paddingTop="4dp"
            />
    </RelativeLayout>


    <TextView

        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of item"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail of item"
        android:textSize="12sp"
        android:textColor="#0074b2"
        android:layout_marginBottom="5dp"/>


    <TextView

        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of item"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail of item"
        android:textSize="12sp"
        android:textColor="#0074b2"
        android:layout_marginBottom="5dp"/>


    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#0074b2"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"

        />

    <Button
        android:layout_gravity="center"
        android:id="@+id/viewAllDiscover"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:textColor="#fff"
        android:textSize="10sp"
        android:text="View All"
        android:background="@drawable/buttonhape"
        android:layout_marginBottom="45dp"

        />

</LinearLayout>